<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/item_border"
    android:padding="8dp">

    <TextView
        android:id="@+id/item_tvTitle"
        android:layout_width="231dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="가게이름"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/item_tvCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_tvCategory"
        android:layout_width="167dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:text="카테고리"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_tvTitle"
        app:layout_constraintStart_toStartOf="@+id/item_tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/item_tvTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>